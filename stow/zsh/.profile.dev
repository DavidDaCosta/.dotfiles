# HELPERS

cheat() { curl -s "cheat.sh/$1"; }

git_commit() {
  if [ -z "$3" ]
  then
    git commit -m "$1: $2"
  else
    git commit -m "$1($2): $3"
  fi
}


# ALIASES

alias yw="yarn workspace"
alias python=python3
alias cat='bat --paging=never'

# CONVENTIONAL COMMITS
alias g-r="git_commit refactor"
alias g-t="git_commit test"
alias g-fi="git_commit fix"
alias g-fe="git_commit feat"
alias g-ch="git_commit chore"
alias g-st="git_commit style"
alias g-ci="git_commit ci"
alias g-d="git_commit docs"
alias g-m="git_commit misc"

alias vs='code .'

alias icat="kitty +kitten icat --align left"
alias mkpwd="xkcdpass --count=5 --acrostic=\"chaos\" -C \"first\" -R --min=5 --max=6 -D \"#@^&~_-;\""

CLI="$HOME/.cli"
VSCODE="/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

export PATH="/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:$PATH"
export PATH="$VSCODE:/opt/local/bin:$PATH"

export GOPATH=$(go env GOPATH)
export PATH="$CHT:$GOPATH/bin:$PATH"
export ZSH="$HOME/.oh-my-zsh"

